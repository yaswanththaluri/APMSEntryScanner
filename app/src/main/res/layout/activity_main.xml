<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:id="@+id/scanLay">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/imgbarcodescan"
            android:id="@+id/scanInit"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click on icon to Initialize scan"
            android:layout_gravity="center"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:id="@+id/successLay">



        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icondone"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Yaswanth!"
            android:layout_gravity="center"
            android:textSize="28sp"
            android:textColor="#006699"
            android:id="@+id/confUserName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are Allowed to PARK NOW in Parking Area"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#cc6699"
            android:id="@+id/status"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:id="@+id/alertLay">



        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/iconalert"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unauthorized Access!"
            android:layout_gravity="center"
            android:textSize="28sp"
            android:textColor="#C74343"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are not allowed to Park in Parking Area"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#C74343"/>

    </LinearLayout>



</RelativeLayout>